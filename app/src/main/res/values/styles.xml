<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textViewStyle">@style/DefaultTextView</item>
        <item name="android:src">@color/test</item>
        <item name="android:windowBackground">@color/colorWindowBg</item>
    </style>

    <style name="AppTheme.Main">
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="AppTheme.Reading">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
    </style>

    <style name="DefaultTextView" parent="android:Widget.TextView">
        <item name="fontPath">fonts/default-*</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="AppTheme.AppBarImage">
        <item name="android:src">@color/test_ab</item>
        <item name="android:padding">12dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="AppTheme.TextReadable">
        <item name="android:id">@id/primaryContentTextView</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingExtra">14dp</item>
        <item name="android:text">@string/test_content</item>
        <item name="android:textColor">@color/textReadable</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.DownloadDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme.ProgressBarHorizontal" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:background">@drawable/layer_progressbar</item>
    </style>

    <style name="SegmentButton" parent="RadioButton">
        <item name="android:minWidth">35dp</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>
</resources>
