<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/head_filter_bg"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="104dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <View
            android:layout_width="4dp"
            android:layout_height="16dp"
            android:layout_marginRight="8dp"
            android:background="?colorPrimary" />

        <TextView
            android:id="@+id/head_rank_tvDataSource"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/test_data_source"
            android:textColor="@color/textReadable" />

        <info.hoang8f.android.segmented.SegmentedGroup
            android:id="@+id/head_rank_segGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:orientation="horizontal"
            segmentedgroup:sc_border_width="1dp"
            segmentedgroup:sc_checked_text_color="@android:color/white"
            segmentedgroup:sc_corner_radius="2.5dp"
            segmentedgroup:sc_tint_color="@color/colorPrimary" />

    </LinearLayout>
</FrameLayout>