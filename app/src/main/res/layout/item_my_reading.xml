<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/item_my_reading_imgCover"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@string/dcd" />

    <TextView
        android:id="@+id/item_my_reading_tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:text="@string/test_title_author"
        android:textColor="@color/textReadable"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/item_my_reading_lnStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="72dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_my_reading_tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="16dp"
            android:text="@string/test_time"
            android:textColor="@color/div_tab" />

        <RatingBar
            android:id="@+id/item_my_rbRating"
            android:layout_width="100dp"
            android:layout_height="24dp"
            android:layout_marginBottom="-4dp"
            android:isIndicator="true"
            android:progressDrawable="@drawable/layer_rating_s_orange"
            android:rating="5" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_my_reading_lnTeacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="72dp"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:visibility="gone">

        <RatingBar
            android:id="@+id/item_my_rbRatingTeacher"
            android:layout_width="100dp"
            android:layout_height="24dp"
            android:layout_marginBottom="-6dp"
            android:isIndicator="true"
            android:progressDrawable="@drawable/layer_rating_s_orange" />

        <View
            android:id="@+id/item_my_reading_viewAnchorRated"
            android:layout_width="0px"
            android:layout_height="0px"
            android:layout_weight="1"
            android:visibility="gone" />

        <TextView
            android:id="@+id/item_my_reading_tvReader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:text="@string/test_user"
            android:textColor="@color/div_tab" />

        <View
            android:id="@+id/item_my_reading_viewAnchorNotRated"
            android:layout_width="0px"
            android:layout_height="0px"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/item_my_reading_tvTimeTeacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/test_time"
            android:textColor="@color/div_tab" />

    </LinearLayout>
</FrameLayout>